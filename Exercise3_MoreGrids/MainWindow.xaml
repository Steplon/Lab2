<Window x:Class="Exercise3_MoreGrids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise3_MoreGrids"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Background="Yellow"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Background="red"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="Purple"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Background="Green"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Background="Orange"/>
        <TextBlock Grid.Column="3" Grid.Row="2" Background="LightBlue"/>


    </Grid>
</Window>
